{
    "name": "{{ name }}",
    "description": "{{ description }}",
    "author": "{{ author }}",
    "private": true,
    "repository": {},
    "contributors": [],
    "bugs": {},
    "keywords": [],
    "license": "MIT",
    "scripts": {
        "xo": "node_modules/.bin/xo src/ test/",
        "mocha": "node_modules/.bin/mocha test/ --recursive",
        "generate-docs": "node_modules/.bin/jsdoc -c jsdoc.json",
        "build": "cross-env NODE_ENV=production browserify -g envify src/main.js | uglifyjs -c warnings=false -m > dist/build.js",
        "watchify": "watchify -vd -p browserify-hmr -e src/main.js -o dist/build.js",
        "start": "node_modules/.bin/http-server -o -s -c 1 -a localhost",
        "start-dev": "npm-run-all --parallel watchify start",
        "test": "npm run xo && npm run mocha"
    },
    "engines": {
        "node": ">= 6.0.0",
        "yarn": ">= 0.18.0"
    },
    "dependencies": {
        "babel-cli": "^6.23.0",
        "babel-core": "^6.23.1",
        "babel-preset-es2015": "^6.22.0",
        "babel-preset-stage-2": "^6.22.0",
        "babelify": "^7.2.0",
        "body-parser": "^1.17.0",
        "browserify": "^13.0.1",
        "browserify-hmr": "^0.3.1",
        "cross-env": "^1.0.6",
        "envify": "^3.4.1",
        "helmet": "^3.4.1",
        "http-server": "^0.9.0",
        "loglevel": "^1.4.1",
        "socket.io-client": "^1.7.3",
        "vue": "^2.0.1",
        "vue-resource": "^1.0.3",
        "vue-router": "^2.1.1",
        "vueify": "^9.1.0",
        "vuex": "^2.2.1",
        "watchify": "^3.4.0"
    },
    "devDependencies": {
        "eslint": "^3.17.0",
        "eslint-plugin-vue": "^2.0.1",
        "mocha": "^3.2.0",
        "npm-run-all": "^2.1.2",
        "uglify-js": "^2.5.0",
        "xo": "^0.17.1"
    },
    "browserify": {
        "transform": [
            "vueify",
            "babelify"
        ]
    },
    "xo": {
        "space": 4,
        "rules": {
            "space-before-function-paren": [
                "error",
                "never"
            ]
        },
        "parserOptions": {
            "ecmaVersion": 6
        },
        "envs": [
            "browser",
            "es6",
            "mocha"
        ],
        "globals": [
            "log"
        ],
        "ignores": [
            "**/*.min.js"
        ],
        "plugins": [
            "vue"
        ],
        "extensions": [
            "vue"
        ]
    }
}
